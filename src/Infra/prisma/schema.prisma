generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Cliente {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  nome     String
  email    String
  telefone String
  endereco  Endereco?
  cpf       String
  create_at DateTime @default(now())
  update_at DateTime @updatedAt
}

model Endereco {
  id  String  @id @default(auto()) @map("_id") @db.ObjectId
  rua String
  bairro String
  cidade String
  cliente Cliente @relation(fields: [clienteId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  clienteId String @unique @db.ObjectId
}


model User {
  id  String  @id @default(auto()) @map("_id") @db.ObjectId
  user String @unique
  senha String
  create_at DateTime @default(now())
  update_at DateTime @updatedAt
}

model Tabela {
  id            String   @id @default("_id") @map("_id")
  DataDeCriacao DateTime
  posicao       Int
  pontos        Int
  ultimos_jogos  String[]
  jogos         Int
  vitorias      Int
  empates       Int
  derrotas      Int
  gols_pro       Int
  gols_contra    Int
  saldo_gols     Int
  aproveitamento Int
  variacao_posicao Int
  equipe             Equipe?
}

model Equipe {
  time_id        Int     @id @map("_id")
  nome_popular  String
  sigla         String
  escudo        String
  tabelaId      String @unique
  tabela        Tabela @relation(fields: [tabelaId],references: [id])
}